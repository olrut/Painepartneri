DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/backend"

# JWT/Session secret for FastAPI Users
SECRET_KEY="change-me-to-a-long-random-string"

# Email (Resend)
# In development, default to not sending real emails.
SEND_EMAILS=false
RESEND_API_KEY=""
SEND_FROM="Your App <no-reply@example.com>"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_REDIRECT_URI="http://localhost:5173/oauth/google/callback"

# OTP testing
TEST_FIXED_OTP=""
VERIFY_SUCCESS_REDIRECT="http://localhost:5173/sign-in"

# CORS
CORS_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"

# Dev convenience: auto-create schema at startup
AUTO_CREATE_DB_SCHEMA=true

# pgAdmin (optional GUI for Postgres)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
